<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.farhad.controllers.LoginController"
            id="login-page-root"
            stylesheets="@../style/login_page.css">

    <!-- MARGE GLOBALE -->
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- EN-TÊTE -->
    <top>
        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <ImageView id="application-icon">
                <Image url="@../icons/banking-system.png"/>
            </ImageView>

            <VBox spacing="5.0">
                <Label text="Welcome to BMS" id="welcome-message"/>
                <Label text="Secure. Simple. Smart."
                       styleClass="login-page-subtitle"/>
            </VBox>
        </HBox>
    </top>

    <!-- CONTENU CENTRAL -->
    <center>
        <HBox alignment="CENTER" spacing="40.0">

            <!-- COLONNE GAUCHE (VISUEL / TEXTE) -->
            <VBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Bank Mondial Simplicite"
                       styleClass="login-page-title"/>
                <Label text="Sign in to manage your accounts, transfers and cards in one place."
                       wrapText="true"
                       maxWidth="260"
                       styleClass="login-page-description"/>
            </VBox>

            <!-- CARTE DE CONNEXION -->
            <VBox spacing="20.0" alignment="CENTER_LEFT" id="login-card"
                  maxWidth="360">
                <Label text="Login to your account"
                       styleClass="login-card-title"/>

                <VBox spacing="12.0" fillWidth="true">

                    <!-- USERNAME -->
                    <VBox spacing="4.0">
                        <Label styleClass="login-page-labels" text="Username"/>
                        <TextField fx:id="usernameTextField"
                                   promptText="Enter your username"
                                   styleClass="login-page-text-fields"/>
                    </VBox>

                    <!-- PASSWORD -->
                    <VBox spacing="4.0">
                        <Label styleClass="login-page-labels" text="Password"/>
                        <PasswordField fx:id="passwordTextField"
                                       promptText="Enter your password"
                                       styleClass="login-page-text-fields"/>
                    </VBox>

                    <!-- OPTIONS -->
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <CheckBox fx:id="rememberMeCheckBox"
                                  text="Remember me"
                                  styleClass="login-page-help-questions"/>
                    </HBox>

                    <!-- BOUTON -->
                    <Button fx:id="loginButton"
                            id="login-page-login-btn"
                            text="Login"
                            maxWidth="Infinity"/>
                </VBox>

                <Separator maxWidth="360"/>

                <!-- LIENS D'AIDE -->
                <VBox spacing="5.0" alignment="CENTER">
                    <Label fx:id="forgotPasswordLabel"
                           styleClass="login-page-help-questions link-label"
                           text="Forgot password?"/>
                    <Label fx:id="signUpLabel"
                           styleClass="login-page-help-questions link-label"
                           text="Don't have an account? Sign up"/>
                </VBox>
            </VBox>
        </HBox>
    </center>

    <!-- PIED DE PAGE -->
    <bottom>
        <VBox spacing="3.0" alignment="CENTER_LEFT">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label fx:id="projectInfoLabel"
                       id="login-page-info"
                       text="© Bank Mondial Simplicite"/>
            </HBox>
            <HBox alignment="CENTER_LEFT">
                <Label fx:id="devInfoLabel"
                       id="login-page-info"
                       text="MiniBank – JavaFX · MySQL"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>